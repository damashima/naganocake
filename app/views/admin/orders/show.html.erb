<div class="container">
  <div class="row">
    <div class="col-8">
      <h2>注文履歴詳細</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>購入者</td>
            <td><u><%= link_to @order.customer.last_name + " " + @order.customer.first_name, style: "color: black;" %></u></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td><%= @order.address %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
        </tbody>
      </table>

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <%= @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= (order_detail.price * 1.1).floor %></td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.price * 1.1).floor * order_detail.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <table class="table">
        <tbody>
          <tr>
            <td>商品合計</td>
            <td><%= (@order.total_payment - @order.shipping_cost) %></td>
          </tr>
          <tr>
            <td>送料</td>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <td>請求金額合計</td>
            <td><%= @order.total_payment %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>