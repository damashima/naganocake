<div class="container">
  <div class="row justify-content-center offset-2">
    <div class="col-3">

      <h3>商品詳細</h3><br>
      <%= attachment_image_tag @item, :image, format: 'jpeg', size: "200x150" %>
    </div>
    <div class="col-7">
      <table class="table-borderless"><br>
      <br>
      <br>
        <tbody>
          <tr>
            <td>商品名</td>
            <td>　<%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td>　<%= @item.introduction %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td>　<%= @item.with_tax_price %>(<%= @item.price %>)円</td>
          </tr>
        </tbody>
      </table>
      <br>
      <br>
      <br>
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success btn-lg" %>
    </div>
  </div>
</div>