<div class="container">
  <div class="row">
    <div class="col text-center"><br>
      <h3>商品新規登録</h3><br>
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
        <div class="form-group">
          <label>商品画像</label>
            <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <label>商品名</label>
            <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <label>商品説明</label>
            <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <label>税抜価格</label>
            <%= f.text_field :price %>円
        </div>
          <%= f.submit '新規登録', class: "btn btn-success btn-lg" %>
        <% end %>
    </div>
  </div>
</div>