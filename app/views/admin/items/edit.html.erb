<div class="container">
  <div class="row">
    <div class="col text-center"><br>
    <h2>商品編集</h2><br>
    <%= form_with model: @item, url: edit_admin_item_path(@item.id), method: :patch do |f| %>
      <div class="form-group">
        <label>商品画像</label>
          <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <label>商品名</label>
          <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <label>商品説明</label>
          <%= f.text_area :introduction %>
      </div>
      <div class="form-group">
        <label>税抜価格</label>
          <%= f.text_field :price %>円
      </div>
        <%= f.submit '変更を保存', class: "btn btn-success btn-lg" %>
      <% end %>
    </div>
  </div>
</div>