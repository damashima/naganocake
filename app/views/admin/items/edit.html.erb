<div class="container">
  <div class="row justify-content-center offset-1">
    <div class="col-9">
      <h4>商品編集</h4>
      <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品画像</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <td>税抜価格</td>
            <td><%= f.text_field :price %>円</td>
          </tr>
        </tbody>
      </table>
      <div class="col-7 text-center">
        <%= f.submit '変更を保存', class: "btn btn-success btn-lg" %>
      </div>
      <% end %>
    </div>
  </div>
</div>