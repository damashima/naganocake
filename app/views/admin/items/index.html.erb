<div class="row justify-content-center offset-2">
  <div class="col-10">
    <h2>商品一覧</h2>
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
        <tr>
          <th><%= item.id %></th>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.price %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

