<div class="container">
  <div class="row">
    <div class="col">
      <br>
      <div class="text-right">
        <%= link_to "新規登録", new_admin_item_path, class:"btn btn-primary" %>
      </div>
      <h3>商品一覧</h3>
      <table class="table table-sm">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
          <tr>
            <th><%= item.id %></th>
            <td><u><%= link_to item.name, admin_item_path(item), style: "color: black;" %></u></td>
            <td><%= item.price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

