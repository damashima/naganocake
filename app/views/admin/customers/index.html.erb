<div class="container">
  <div class="col-2 offset-2 text-center">
    <h4>会員一覧</h4>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-8">
      <table class="table table-sm">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><u><%= link_to customer.last_name + " " + customer.first_name, admin_customer_path(customer), style: "color: black;" %></u></td>
            <td><%= customer.email %></td>
            <td><% if customer.is_deleted %>
                  <p class="text-secondary"><strong>退会</strong></p>
                <% else %>
                  <p class="text-success"><strong>有効</strong></p>
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>