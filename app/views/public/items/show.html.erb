<div class="container">
  <div class="row justify-content-center offset-2">
    <div class="col-4">
      <%= attachment_image_tag @item, :image, format: 'jpeg', size: "270x180" %>
    </div>
    <div class="col-6">
      <h4><strong><%= @item.name %></strong></h4>
      <h5><%= @item.introduction %></h5><br>
      <br>
      <h5><strong>¥ <%= @item.with_tax_price %></strong>(税込)</h5><br>
      <%= form_with(model: @cart_item, url: cart_items_path, method: :post, local: true) do |f| %>
      <%= f.select :amount, *[1..10], {:prompt => "個数選択"} %>
      <%= f.hidden_field :item_id, :value => @item.id %>
      <%= f.submit "カートに入れる", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>