<div class="container">
  <div class="row justify-content-center offset-2">
    <div class="col-4">
      <%= attachment_image_tag @item, :image, format: 'jpeg', size: "270x180" %>
    </div>
    <div class="col-6">
      <h4><strong><%= @item.name %></strong></h4>
      <h5><%= @item.introduction %></h5><br>
      <h5><strong>¥ <%= (@item.price * 1.1).floor %></strong>(税込)</h5>

    </div>
  </div>
</div>