<div class="container">
  <h4><strong>商品一覧</strong>(全<%= @items.count %>)件</h4>
  <div class="row">
    <div class="d-flex align-items-start">
      <% @items.each do |item| %>
        <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, format: 'png', size: "200x150" %>
        <% end %><br>
        <%= item.name %><br>
        ¥<%= item.price %>
      <% end %>
    </div>
  </div>
</div>