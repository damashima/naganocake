<div class="container">
  <h4><strong>商品一覧</strong>(全<%= @items.count %>)件</h4>
  <div class="row">
    <div class="col-8">
      <div class="card-columns">
        <% @items.each do |item| %>
        <div class="card border-0">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, format: 'png', size: "200x150" %>
          <% end %>
          <div class="card-body">
            <div class="card-text"><%= item.name %></div>
            <div class="card-text">¥<%= item.price %></div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>