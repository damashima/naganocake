<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
    <h4>ショッピングカート</h4>
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <th><%= cart_item.item.name %></th>
          <th><%= cart_item.item.price.with_tax_price %></th>
          <th>
          </th>
          <th><%= cart_item.subtotal%></th>
          <th></th>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
