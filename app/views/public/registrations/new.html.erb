<div class="container">
  <h4>新規会員登録</h4>
  <div class="row">
    <div class="col-">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :名前, class: "col-4" %>
          <%= f.label :姓 %>
          <%= f.text_field :last_name, autofocus: true, class: "col-lg-3" %>
          <%= f.label :名 %>
          <%= f.text_field :first_name, autofocus: true, class: "col-lg-3" %>
        </div>

        <div class="form-group">
          <%= f.label :フリガナ, class: "col-4" %>
          <%= f.label :姓 %>
          <%= f.text_field :last_name_kana, autofocus: true, class: "col-lg-3" %>
          <%= f.label :名 %>
          <%= f.text_field :first_name_kana, autofocus: true, class: "col-lg-3" %>
        </div>

        <div class="form-group">
          <%= f.label :メールアドレス, class: "col-5" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-3" %>
        </div>

        <div class="form-group">
        <%= f.label :"郵便番号(ハイフンなし)", class: "col-5" %>
        <%= f.text_field :postal_code, autofocus: true, class: "col-lg-3" %>
        </div>

        <div class="field">
        <%= f.label :住所 %>
        <%= f.text_field :address, autofocus: true %>
        </div>

        <div class="form-group">
        <%= f.label :"電話番号(ハイフンなし)", class: "col-5" %>
        <%= f.text_field :telephone_number, autofocus: true, class: "col-lg-3" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
      <br>
      <div class="col">
      <h4>既に登録済みの方</h4>
      <u><%= link_to "こちら", new_customer_session_path %></u> からログインして下さい。
      </div>
    </div>
  </div>
</div>