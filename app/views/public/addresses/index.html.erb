<div class="row offset-1">
  <div class="col-8">
    <h4>配送先登録/一覧</h4>
    <%= form_with model: @address do |f| %>
    <div class="form-group">
      <%= f.label :"郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code %>
    </div>
    <div class="form-group">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>
    <div class="form-group">
      <%= f.label :宛名 %>
      <%= f.text_field :name %>
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div><br>
<br>

<div class="row justify-content-left offset-1">
  <div class="col-7">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
              <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>